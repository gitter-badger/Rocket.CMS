.file-entry
	&__clickable-space
		display inline
		cursor pointer
		width 100%

	&__arrow
		display inline

		&:before
			content "·\00a0"

		&--folded:before
			content "▸"

		&--unfolded:before
			content "▾"

	&__title
		display inline

	&__desc
		display inline
		color #aaa

	&__buttons
		display inline
		float right

		&__button
			display inline
			padding 4px 8px
			border 1px solid #aaa
			border-radius 4px
			cursor pointer
			transition-duration 0.5s

			&:hover
				background-color #dfb

			&--hidden
				display none

	&__children
		margin-left 16px

		&--folded
			display none
